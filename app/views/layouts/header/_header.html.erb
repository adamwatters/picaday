<nav class="navigation">
  <section class="container">
    <%= link_to root_url, class: "navigation-title" do %>
      <h1 class="title">Picaday</h1>
    <% end %>
    <ul class="navigation-list float-right">
      <% if logged_in? %>
        <li class="navigation-item">
          <%= link_to sequences_user_path(current_user), class:"navigation-link" do %>
            <%= render 'layouts/header/picture-icon' %>
          <% end %>
        </li>
        <li class="navigation-item">
          <%= link_to current_user, class:"navigation-link" do %>
            <%= render 'layouts/header/user-icon' %>
          <% end %>
        </li>
      <% else %>
        <li class="navigation-item">
          <%= link_to "Sign up", signup_path, class:"navigation-link" %>
        </li>
        <li class="navigation-item">
          <%= link_to "Log in", login_path, class:"navigation-link" %>
        </li>
      <% end %>
    </ul>
  </section>
</nav>