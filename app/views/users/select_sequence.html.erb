<% provide(:title, current_user.name) %>
<div class="center-block clearfix">
  <%= link_to new_sequence_path do %>
    <div class="sequences_sequence-container">
      <div class="sequences_empty-sequence">New Sequence</div>
    </div>
  <% end %>
  <% @sequences.each do |sequence| %>
    <% if sequence.pictures.empty? && sequence.persisted? %>
      <div class="sequences_sequence-container">
        <%= link_to sequence do %>
          <div class="sequences_empty-sequence">Empty</div>
        </div>
      <% end %>
    <% elsif !sequence.pictures.empty? %>
      <div class="sequences_sequence-container">
        <div class="sequences_sequence-with-pictures">
          <%= link_to sequence do %>
            <%= image_tag sequence.pictures.last.image_url(:tiny) %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>